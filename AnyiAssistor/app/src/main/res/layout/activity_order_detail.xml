<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥ 0.10"
        android:textSize="34sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/image_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 假设下面的TextView是订单的标题 -->
    <TextView
        android:id="@+id/text_order_startPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="出发地 普外科一床"
        android:layout_marginTop="20dp"
    android:textSize="18sp"
    app:layout_constraintTop_toBottomOf="@id/text_amount"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- 这里假设是一系列的信息标签和值 -->
    <!-- 例如: 订单号 -->
    <TextView
        android:id="@+id/text_order_endPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "目的地 X光,核磁"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_startPlace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/text_order_Appoint_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预约时间 04月02日 14：00-14：20"
         android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_endPlace"
    app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/text_order_Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系人: Pony"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_Appoint_Time"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_order_Contact_man"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系方式 12345678900"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_Contact"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/text_order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单号 222222222222222222222222222222222222222222222222222"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_Contact_man"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/text_order_Appoint_Time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下单时间 2023年04月02日 13：42：25"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_id"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/text_order_charge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="负责人  182321312312"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_Appoint_Time_txt"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/text_order_endTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成时间  2023年04月02日 13：48：12"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_order_charge"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>