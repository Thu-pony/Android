<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    tools:context=".BankAccountDetailAct">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <EditText
        android:id="@+id/editTextbankaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableStart="@drawable/card_icon"
        android:drawablePadding="10dp"
        android:hint="请输入银行卡号"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/editTextbankname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextbankaccount"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableStart="@drawable/bank_icon"
        android:drawablePadding="10dp"
        android:hint="请输入开户银行"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/editTextusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableStart="@drawable/man_icon"
        android:layout_below="@+id/editTextbankname"
        android:hint="请输入持卡人姓名"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextusername"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableStart="@drawable/phone_icon"
        android:drawablePadding="10dp"
        android:hint="请输入手机号码"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/editTextverifycode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/editTextPhone"
        android:drawableStart="@drawable/icon_zhanghu"
        android:drawablePadding="10dp"
        android:hint="验证码"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:textSize="16sp" />
    <Button
             android:id="@+id/btn_getVeriryCode"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:background="@color/white"
            android:layout_below="@id/editTextPhone"
        android:layout_toRightOf="@+id/editTextverifycode"
        android:layout_marginTop="10dp"
        android:text="获取验证码"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_bind"
            android:layout_below="@id/editTextverifycode"
            android:padding="12dp"
           android:text="立即绑定"
           android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
</RelativeLayout>

    </androidx.cardview.widget.CardView>